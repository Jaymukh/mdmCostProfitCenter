<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<form:SimpleForm id="idPCCommunication" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4"
		labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="Communication Data"/>
			<Label text="Language" required="true"/>
			<ComboBox required="true" selectedKey="{ProfitCenter>/Cepc/spras}" items="{Dropdowns>/T002}" editable="{App>/edit}">
				<core:Item key="{Dropdowns>spras}" text="{Dropdowns>sptxt}"/>
			</ComboBox>
			<Label text="Telephone 1"/>
			<Input value="{ProfitCenter>/Cepc/anred}{ProfitCenter>/Cepc/telf1}" editable="{App>/edit}"/>
			<Label text="Telephone 2"/>
			<Input value="{ProfitCenter>/Cepc/telf2}" editable="{App>/edit}"/>
			<Label text="Fax Number"/>
			<Input value="{ProfitCenter>/Cepc/telfx}" editable="{App>/edit}"/>
			<Label text="Telebox Number"/>
			<Input value="{ProfitCenter>/Cepc/telbx}" editable="{App>/edit}"/>
			<core:Title text=""/>
			<Label text="Teletex Number"/>
			<Input value="{ProfitCenter>/Cepc/teltx}" editable="{App>/edit}"/>
			<Label text="Printer Name"/>
			<Input value="{ProfitCenter>/Cepc/drnam}" editable="{App>/edit}"/>
			<Label text="Data Line"/>
			<Input value="{ProfitCenter>/Cepc/datlt}" editable="{App>/edit}"/>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>