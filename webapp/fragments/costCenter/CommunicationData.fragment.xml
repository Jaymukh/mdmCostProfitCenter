<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
		adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="Communication Data"/>
			<Label text="Language"/>
			<ComboBox required="true" selectedKey="{Customer>/Csks/spras}" items="{Dropdowns>/T002}" editable="{App>/edit}">
				<core:Item key="{Dropdowns>spras}" text="{Dropdowns>sptxt}"/>
			</ComboBox>
			<Label text="Telephone 1"/>
			<Input value="{Customer>/Csks/telf1}"/>
			<Label text="Telephone 2"/>
			<Input value="{Customer>/Csks/telf2}"/>
			<Label text="Fax Number"/>
			<Input value="{Customer>/Csks/telfx}"/>
			<Label text="Telebox Number"/>
			<Input value="{Customer>/Csks/telbx}"/>
			<core:Title text=""/>
			<Label text="Teletex Number"/>
			<Input value="{Customer>/Csks/telx1}"/>
			<Label text="Printer Name"/>
			<Input value="{Customer>/Csks/kdnam}"/>
			<Label text="Data Line"/>
			<Input value="{Customer>/Csks/datlt}"/>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>