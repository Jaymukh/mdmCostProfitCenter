<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<form:SimpleForm id="idCCDetails" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4"
		labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="General Data"/>
			<Label text="Controlling Area"/>
			<Input editable="false" value="{CostCenter>/Csks/kokrs}">
				<layoutData>
					<l:GridData span="XL2 L2 M3 S4"/>
				</layoutData>
			</Input>
			<Input value="Murphy Controlling Area" editable="false"/>
			<Label text="Cost Center / Name"/>
			<Input required="true" value="{CostCenter>/Csks/kostl}" editable="{App>/edit}">
				<layoutData>
					<l:GridData span="XL2 L2 M3 S4"/>
				</layoutData>
			</Input>
			<Input value="{CostCenter>/Cskt/ktext}" liveChange="onChangeName" editable="{App>/edit}"/>
			<Label text="Medium Text"/>
			<Input value="{CostCenter>/Cskt/ltext}" liveChange="onChangeMText" editable="{App>/edit}"/>
			<Label text="Department"/>
			<Input value="{CostCenter>/Csks/abtei}" editable="{App>/edit}"/>
			<Label text="Cost Center Category" required="true"/>
			<ComboBox required="true" selectedKey="{CostCenter>/Cskt/kosar}" items="{Dropdowns>/TKT05}" editable="{App>/edit}"
				showSecondaryValues="true">
				<core:ListItem key="{Dropdowns>kosar}" text="{Dropdowns>ktext}" additionalText="{Dropdowns>kosar}"/>
			</ComboBox>
			<Label text="Company Code" required="true"/>
			<ComboBox required="true" selectedKey="{CostCenter>/Cskt/kosar}" items="{Dropdowns>/T001}" editable="{App>/edit}"
				selectionChange="onSelectBukrs" showSecondaryValues="true">
				<core:ListItem key="{Dropdowns>bukrs}" text="{Dropdowns>butxt}" additionalText="{Dropdowns>bukrs}"/>
			</ComboBox>
			<core:Title text=""/>
			<Label text="Business Area"/>
			<Input editable="false" value="{CostCenter>/Cskt/gsber}"/>
			<Label text="Functional Area"/>
			<ComboBox required="true" selectedKey="{CostCenter>/Cskt/fkber}" items="{Dropdowns>/VW_TFKB}" editable="{App>/edit}"
				showSecondaryValues="true">
				<core:ListItem key="{Dropdowns>fkber}" text="{Dropdowns>fkbtx}" additionalText="{Dropdowns>fkber}"/>
			</ComboBox>
			<Label text="Currency" required="true"/>
			<ComboBox required="true" selectedKey="{CostCenter>/Cskt/waers}" items="{Dropdowns>/TCURC}" editable="false" showSecondaryValues="true">
				<core:ListItem key="{Dropdowns>waers}" text="{Dropdowns>ltext}" additionalText="{Dropdowns>waers}"/>
			</ComboBox>
			<Label text="Profit Center" required="true"/>
			<Input valueHelpOnly="true" showValueHelp="true" required="true" value="{CostCenter>/Cskt/prctr}" editable="{App>/edit}"/>
			<Label text="Logical System"/>
			<Input editable="false" value="{CostCenter>/Cskt/logsystem}"/>
			<core:Title text="Administrative Data"/>
			<Label text="New Cost Center"/>
			<Input valueHelpOnly="true" showValueHelp="true" value="" editable="{App>/edit}"/>
			<Label text="User Responsible"/>
			<Input required="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true"
				value="{CostCenter>/Cskt/verak_user}" editable="{App>/edit}">
				<customData>
					<core:CustomData key="title" value="User Responsible"></core:CustomData>
					<core:CustomData key="table" value="USER_ADDRP"></core:CustomData>
					<core:CustomData key="inputKey" value="bname"></core:CustomData>
					<core:CustomData key="inputText" value="bname"></core:CustomData>
					<core:CustomData key="persnumber" value="Identifier"></core:CustomData>
					<core:CustomData key="name_TEXT" value="Description"></core:CustomData>
				</customData>
			</Input>
			<Label text=" Person Responsible"/>
			<Input required="true" value="{CostCenter>/Cskt/verak}" editable="{App>/edit}"/>
			<core:Title text="Audit Information"/>
			<Label text="Created On/By"/>
			<Input editable="false" value="{CostCenter>/Cskt/ersad}/{CostCenter>/Cskt/usnam}"/>
			<Label text="Changed On/By"/>
			<Input editable="false" value=""/>
			<Label text="SAP Hierarchy"/>
			<Input value="{CostCenter>/Cskt/zsap_hier}" editable="{App>/edit}"/>
			<Label text="Hyperion Hierarchy"/>
			<Input value="{CostCenter>/Cskt/zhyp_hier}" editable="{App>/edit}"/>
			<Label text="Business Unit (Old/New)"/>
			<Input showValueHelp="true" valueHelpOnly="true" value="{CostCenter>/Cskt/zbus_unit}" editable="{App>/edit}"/>
			<Label text="Department (Hyperion)"/>
			<Input showValueHelp="true" valueHelpOnly="true" value="{CostCenter>/Cskt/zdept_hyp}" editable="{App>/edit}"/>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>