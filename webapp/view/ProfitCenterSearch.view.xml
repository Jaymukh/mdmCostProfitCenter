<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:vm="sap.ui.comp.variants" xmlns:f="sap.f" controllerName="murphy.mdm.costProfit.mdmCostProfitCenter.controller.ProfitCenterSearch"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<f:DynamicPage fitContent="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<vm:VariantManagement select="onHandleVMSelect" standardItemText="Address Data" defaultVariantKey="addressData">
						<vm:variantItems>
							<vm:VariantItem text="General Data" key="generalData"></vm:VariantItem>
						</vm:variantItems>
					</vm:VariantManagement>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<f:content>
					<filterbar:FilterBar id="idPCSearchFB" reset="onReset" search="onSearchCustomer" useToolbar="false" showGoOnFB="true">
						<filterbar:filterGroupItems >
							<filterbar:FilterGroupItem visibleInFilterBar="true" groupName="*standard*" name="name1" label="Name 1">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="true" groupName="*standard*" name="name2" label="Name 2">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="true" groupName="*standard*" name="street" label="Street">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="true" groupName="*standard*" name="city" label="City">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="true" groupName="*standard*" name="country" label="Country">
								<filterbar:control>
									<ComboBox items="{Dropdowns>/T005}">
										<core:ListItem key="{Dropdowns>land1}" text="{Dropdowns>landx}" additionalText="{Dropdowns>land1}"/>
									</ComboBox>
								</filterbar:control>
							</filterbar:FilterGroupItem>
						</filterbar:filterGroupItems>
						<filterbar:filterGroupItems>
							<filterbar:FilterGroupItem visibleInFilterBar="false" groupName="generalData" name="kunnr" label="Name">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="false" groupName="generalData" name="bankAccount" label="Profit Centre">
								<filterbar:control>
									<Input/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="false" groupName="generalData" name="mediumText" label="Medium Text">
								<filterbar:control>
									<Input maxLength="18"/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
							<filterbar:FilterGroupItem visibleInFilterBar="false" groupName="generalData" name="personRes" label="Person Responsible">
								<filterbar:control>
									<Input maxLength="18"/>
								</filterbar:control>
							</filterbar:FilterGroupItem>
						</filterbar:filterGroupItems>
					</filterbar:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table sticky="ColumnHeaders" items="{SearchCustomerModel>/searchAllModelData/customerDTOs}">
				<headerToolbar>
					<Toolbar>
						<Label text="Profit Center Master List({SearchCustomerModel>/searchAllModelData/totalRecords})" design="Bold"></Label>
						<ToolbarSpacer></ToolbarSpacer>
						<Button text="Create Profit Center" visible="{= ${userManagementModel>/role}.indexOf('req')!== -1 ? true : false }" type="Emphasized"
							press="onNavtoCreatePC"></Button>
						<Label text="Page No."/>
						<Select id="searchAllVendorPageSelectID" items="{SearchCustomerModel>/PageData}" selectedKey="{SearchCustomerModel>/selectedPageKey}"
							change="onSelectSearchAllVendorPage">
							<core:Item text="{SearchCustomerModel>text}" key="{SearchCustomerModel>key}"/>
						</Select>
						<Button icon="sap-icon://navigation-left-arrow" type="Transparent" enabled="{SearchCustomerModel>/leftEnabled}"
							press="onSelectSearchAllVendorPageLeft"></Button>
						<Button icon="sap-icon://navigation-right-arrow" type="Transparent" enabled="{SearchCustomerModel>/rightEnabled}"
							press="onSelectSearchAllVendorPageRight"></Button>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<header>
							<Label text="Profit Center" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Name" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Pending Request" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Valid Form" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Valid To" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Medium Text" design="Bold"></Label>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="User Responsible" design="Bold"></Label>
						</header>
					</Column>
					<Column width="5%" visible="{= ${userManagementModel>/role}.indexOf('req')!== -1 ? true : false }">
						<header>
							<Label text=" " design="Bold"></Label>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Link text="{SearchCustomerModel>customCustomerCustKna1DTO/kunnr}" press="onGetCustomerDetails"></Link>
							<ObjectStatus state="{path :'SearchCustomerModel>pendingRequest', formatter : '.handlePendingRequest'}"
								text="{SearchCustomerModel>pendingRequest}"/>
							<Text
								text="{ parts:[ {path:'SearchCustomerModel>customVendorLFA1DTO/name1'}, {path:'SearchCustomerModel>customVendorLFA1DTO/name2'}, {path:'SearchCustomerModel>customVendorLFA1DTO/name3'}, {path:'SearchCustomerModel>customVendorLFA1DTO/name4'} ], formatter:'.handleDescription' }"></Text>
							<Text text="{SearchCustomerModel>customVendorLFA1DTO/vbund}"></Text>
							<Text text="{SearchCustomerModel>customVendorLFA1DTO/land1}"></Text>
							<Text text=""/>
							<Text text=""/>
							<core:Icon src="sap-icon://overflow" press="handleOverFlowButton"></core:Icon>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>